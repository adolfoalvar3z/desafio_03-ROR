<h1>Agrega una nueva Movie</h1>
<%= form_with url: "/movie/create" do |form| %>
  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :synopsis, class: "form-label" %>
    <%= form.text_area :synopsis, class: "form-control", rows: 4 %>
  </div>
  <div class="form-group">
    <%= form.label :director, class: "form-label" %>
    <%= form.text_field :director, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
